<div class="container adjust-left">
  <h2>Movies</h2>
  <table>
    <tbody>
      <tr>
        <th>
          Ranking
        </th>
        <th>
          Name
        </th>
        <th>
          Upvote
        </th>
      </tr>

      <% @movies.each do |m| %>
      <tr>
        <td>
          Ranked: <%= m.rank %>
        </td>
        <td>
          <%= link_to m.title, movie_path(m.id) %>
        </td>
        <td>
          <%= button_to "Upvote", update_movie_path(m.id), params:{'movie[upvote]' => true},method: :patch, class: "btn btn-default vote"%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "View All Media", root_path, class: "btn btn-default"%>
  <%= link_to "Create New Movie", new_movie_path, class: "btn btn-default" %>

</div>
