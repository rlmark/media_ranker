<h2><%= @album.title %></h2>
<%= @album.rank %>
<%= @album.artist %>
<%= @album.description %>

<%= button_to "Upvote", update_album_path(@album.id), params:{'album[:upvote]' => true}, method: :patch%>
<%= link_to "Edit #{@album.title}", edit_album_path(@album.id) %>
<%= link_to "Delete", delete_album_path(@album.id), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "View all media", root_path %>
<%= link_to "View all albums", albums_path %>
