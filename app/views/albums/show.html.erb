<div class="container show-page">
  <h2><%= @album.title %></h2>
  <h4>Ranking: <%= @album.rank %></h4>
  <h3>Artist: <%= @album.artist %></h3>
  <%= @album.description %>

  <%= button_to "Upvote", update_album_path(@album.id), params:{'album[:upvote]' => true}, method: :patch, class: "btn btn-default show-nav vote"%>
  <hr>
  <%= link_to "Edit #{@album.title}", edit_album_path(@album.id), class: "btn btn-default show-nav editing" %>
  <%= link_to "Delete", delete_album_path(@album.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-default show-nav deletion' %>
  <%= link_to "View all media", root_path, class: 'btn btn-default show-nav' %>
  <%= link_to "View all albums", albums_path, class: 'btn btn-default show-nav' %>
</div>
