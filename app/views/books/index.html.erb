<div class="container adjust-left">
  <h2>Books</h2>
  <table>
    <tbody>

      <tr>
        <th>
          Ranking
        </th>
        <th>
          Name
        </th>
        <th>
          Upvote
        </th>
      </tr>

      <% @books.each do |m| %>
      <tr>
        <td>
          Ranked: <%= m.rank %>
        </td>
        <td>
          <%= link_to m.title, book_path(m.id) %>
        </td>
        <td>
          <%= button_to "Upvote", update_book_path(m.id), params:{'book[upvote]' => true }, method: :patch, class: "btn btn-default vote"%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "View All Media", root_path, class: "btn btn-default"%>
  <%= link_to "Create New Book", new_book_path, class: "btn btn-default" %>

</div>
